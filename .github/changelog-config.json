{
  "categories": [
    {
      "title": "## ğŸš€ Features",
      "labels": ["feature", "feat", "enhancement"]
    },
    {
      "title": "## ğŸ› Bug Fixes",
      "labels": ["bug", "fix"]
    },
    {
      "title": "## ğŸ“ Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## ğŸ”§ Maintenance",
      "labels": ["chore", "refactor", "style"]
    },
    {
      "title": "## âš¡ Performance",
      "labels": ["performance", "perf"]
    },
    {
      "title": "## ğŸ§ª Tests",
      "labels": ["test", "tests"]
    }
  ],
  "ignore_labels": [
    "ignore",
    "wontfix",
    "duplicate",
    "invalid"
  ],
  "sort": "ASC",
  "template": "${{CHANGELOG}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "empty_template": "- No changes",
  "label_extractor": [
    {
      "pattern": "^(feat|feature)(\\(.+\\))?:",
      "target": "feature"
    },
    {
      "pattern": "^fix(\\(.+\\))?:",
      "target": "bug"
    },
    {
      "pattern": "^docs?(\\(.+\\))?:",
      "target": "documentation"
    },
    {
      "pattern": "^(chore|refactor|style)(\\(.+\\))?:",
      "target": "chore"
    },
    {
      "pattern": "^perf(\\(.+\\))?:",
      "target": "performance"
    },
    {
      "pattern": "^test(\\(.+\\))?:",
      "target": "test"
    }
  ]
}

